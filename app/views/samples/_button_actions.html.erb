<script>

// this shows the "Kits" div 
function showKits(){
    document.getElementById("kit_picker").style.display= "block";
    document.getElementById("kit_picker").className= "kits animated fadeInDown";
}

// this hides the "Kits" div
function hideKits(){
    document.getElementById("kit_picker").className= "kits animated fadeOutUp";
}

// this shows the "Add sample" div 
function showAddSample(){
    document.getElementsByClassName("add_sample")[0].style.display= "block";
    document.getElementsByClassName("add_sample")[0].className= "add_sample animated fadeInDown";
}

// this hides the "Add Sample" div
function hideAddSample(){
    document.getElementsByClassName("add_sample")[0].className= "add_sample animated fadeOutUp";
}

// this shows the "Sample Bank" and changes the button
function showSampleBank(){
  document.getElementsByClassName("sample_bank")[0].style.display= "block";
  document.getElementsByClassName("sample_bank")[0].className= "sample_bank animated fadeInUp";
  document.getElementById("samplebank_button").style.display= "none";
  document.getElementById("hide_bank").style.display= "inline-block";
}

// this hides the "Sample Bank" and changes the button
function hideSampleBank(){
  document.getElementsByClassName("sample_bank")[0].className= "sample_bank animated fadeOutDown";
  document.getElementById("samplebank_button").style.display= "inline-block";
  document.getElementById("hide_bank").style.display= "none";
}

// this shows the "Help" div 
function showHelp(){
    document.getElementsByClassName("help_container")[0].style.display= "block";
    document.getElementsByClassName("help_container")[0].className= "help_container animated fadeInDown";
}

// this hides the "Help" div
function hideHelp(){
    document.getElementsByClassName("help_container")[0].className= "help_container animated fadeOutUp";
}
</script>